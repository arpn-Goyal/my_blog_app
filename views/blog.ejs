<%- include('header.ejs') %>
 <!-- Page Header-->
  <% if(typeof blog !='undefined' && blog !==''){
    %>
 <header class="mt-5" style="background-image: url('assets/img/post-bg.jpg') ">
    <div class="container position-relative px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 justify-content-center mt-5">
            <div class="col-md-1"></div>
            <div class="col-md-10 mt-5">
                <div class="post-heading">
                    <h1></h1>
                    <h2 class="subheading"><%= blog.blogTitle%></h2>
                    <span class="meta">
                        Posted by
                        <a href="#!"><%= blog.writerName %></a>
                        on <%= blog.blogDate %>
                    </span>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</header>
<!-- Post Content-->
<article class="mb-4 ">
    <div class="container px-4 px-lg-5 ">
        <div class="row my-3">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <p><%= blog.blogDescription %></p>
                <div style="text-align: center;">
                <img src="<%= blog.blogImage || 'images/default-blog.png' %>" alt="avatar" class="img-fluid" >
               </div>     
            </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-1"></div>
            <div class="col-md-10">

                <%- blog.blogContent %>
                 
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</article>
<% } %>
<%- include('footer.ejs') %>