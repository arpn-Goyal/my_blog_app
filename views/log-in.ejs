<!-- navigation Headers -->

<%- include('header') %>
        <!-- Header -->
        <header class="ex-header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-10 offset-xl-1">
                        <h1 class="text-center">Log In</h1>
                    </div> <!-- end of col -->
                </div> <!-- end of row -->
            </div> <!-- end of container -->
        </header> <!-- end of ex-header -->
        <!-- end of header -->
        
        <!-- Basic -->
        <div class="ex-form-1 pt-5 pb-5">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 offset-xl-3">
                        <div class="text-box mt-5 mb-5">
                            <p class="mb-4">You don't have a password? Then please <a class="blue" href="/signup">Sign Up</a></p>

                            <!-- Log In Form -->
                            <form action="/login/checkLogin" method="GET">
                                <div class="mb-4 form-floating">
                                    <input type="email" onfocus="handleWrongEmail" class="form-control" name="loginEmail" value="<%= userData.loginEmail ? userData.loginEmail : 'daniel.solo.travels@email.com' %>" id="floatingInput" placeholder="name@example.com" required>
                                    <label for="floatingInput">Email address</label>
                                    <% if(errorMsg && errorField === 'email') {%>
                                        <p style="color: red; font-size: 14px;" id="erorMsgEmail"><%= errorMsg %></p>
                                    <% } %>    
                                </div>
                                <div class="mb-4 form-floating">
                                    <input type="password" onfocus="handleWrongpassword" class="form-control" name="loginPassword" id="floatingPassword" placeholder="Password" required value="JapanCherry@2025">
                                    <label for="floatingPassword">Password</label>
                                    <% if(errorMsg && errorField === 'password') {%>
                                        <p style="color: red; font-size: 14px;" id="erorMsgPassword"><%= errorMsg %></p>
                                    <% } %> 
                                </div>
                                <div class="mb-4 form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1" required checked>
                                    <label class="form-check-label" for="exampleCheck1">I agree with the site's stated <a href="privacy.html">Privacy Policy</a> and <a href="terms.html">Terms & Conditions</a></label>
                                </div>
                                <button type="submit" class="form-control-submit-button">Log in</button>
                            </form>
                            <!-- end of log in form -->

                        </div> <!-- end of text-box -->
                    </div> <!-- end of col -->
                </div> <!-- end of row -->
            </div> <!-- end of container -->
        </div> <!-- end of ex-basic-1 -->
        <!-- end of basic -->


        <!-- Footer -->
        <%- include('footer') %>

        <script>
            function handleWrongEmail(){
            document.querySelector('#erorMsgEmail').style.display = 'none';
            }
            function handleWrongpassword(){
            document.querySelector('#erorMsgPassword').style.display = 'none';
            }
        </script>
